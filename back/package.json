{
    "name": "wlm_back",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "node ace serve --watch",
        "build": "node ace build --production",
        "start": "node server.js",
        "lint": "eslint . --ext=.ts",
        "test": "node ace test --watch",
        "format": "prettier --write .",
        "db:init": "node ace db:init",
        "doc:generate": "swagger-jsdoc -d ./docs/swagger/definition.json ./docs/swagger/**/*.yaml -o ./public/api/swagger-spec.yaml"
    },
    "eslintConfig": {
        "extends": [
            "plugin:adonis/typescriptApp",
            "prettier"
        ],
        "plugins": [
            "prettier"
        ],
        "rules": {
            "prettier/prettier": [
                "error"
            ]
        }
    },
    "eslintIgnore": [
        "build"
    ],
    "prettier": {
        "trailingComma": "es5",
        "semi": false,
        "singleQuote": true,
        "useTabs": false,
        "quoteProps": "consistent",
        "bracketSpacing": true,
        "arrowParens": "always",
        "printWidth": 100
    },
    "devDependencies": {
        "@adonisjs/assembler": "^5.8.0",
        "@japa/preset-adonis": "^1.1.0",
        "@japa/runner": "^2.0.9",
        "@types/uuid": "^8.3.4",
        "adonis-preset-ts": "^2.1.0",
        "eslint": "^8.19.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-adonis": "^2.1.0",
        "eslint-plugin-prettier": "^4.2.1",
        "pino-pretty": "^8.1.0",
        "prettier": "^2.7.1",
        "typescript": "~4.7",
        "youch": "^3.2.0",
        "youch-terminal": "^2.1.4"
    },
    "dependencies": {
        "@adonisjs/auth": "^8.2.1",
        "@adonisjs/bouncer": "^2.3.0",
        "@adonisjs/core": "^5.8.4",
        "@adonisjs/lucid": "^18.1.0",
        "@adonisjs/mail": "^8.1.2",
        "@adonisjs/repl": "^3.1.11",
        "@adonisjs/session": "^6.4.0",
        "@types/socket.io": "^3.0.2",
        "@types/swagger-jsdoc": "^6.0.1",
        "luxon": "^3.0.1",
        "pg": "^8.7.3",
        "phc-argon2": "^1.1.3",
        "proxy-addr": "^2.0.7",
        "reflect-metadata": "^0.1.13",
        "socket.io": "^4.5.1",
        "source-map-support": "^0.5.21",
        "swagger-jsdoc": "^6.2.1",
        "uuid": "^8.3.2"
    }
}
